@model List<day5_asp.Models.news>
@{
    ViewBag.Title = "allNews";
}

<h2 class="text-info text-center" style="padding-bottom:30px" >Your News</h2>

<div class="container" >
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 "   >
                <div style="box-shadow:0px 5px  20px;padding:20px;min-height:550px" >
                    @*@if (File.Exists("~/attatch/users/"+@item.myuser.img))
                    {*@
                        <img style="width:50px;height:50px;border-radius:50%;  " src="~/attatch/users/@item.myuser.img" />
                    @*}
                    else
                    {
                    <img style="width:50px;height:50px;border-radius:50%;  " src="~/attatch/users/de.png" />
                    }*@
                    <span>@item.myuser.name</span>
                    <p class="text-muted" >@item.date</p>
                    <p>@item.title <br /><a class="btn btn-primary" href="viewNews/@item.id">more ....</a></p>
                    <img style="width:100%;height:100%" src="~/attatch/@item.img" />
                </div>
            </div>
        }

    </div>
</div>