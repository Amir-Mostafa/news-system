
@{
    ViewBag.Title = "newsByCatalog";
}

<br />
@Html.DropDownList("cat_id", (SelectList)ViewBag.cats, new { @class = "form-control" })


<div class="content" style="margin-top:100px" >

</div>

@section scripts
{
    <script>

        $("#cat_id").on("change", function () {

            $(".content").empty();
            
            $(".content").load(`/news/newsPartial/${$(this).val()}`);
        });
    </script>

}